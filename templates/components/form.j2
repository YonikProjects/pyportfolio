<p>Let's Talk!</p>
<form method="post">
  <div class="input-group">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required pattern="[a-zA-Z\s]+" />
    </div>

    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required pattern="[^@ \t\r\n]+@[^@ \t\r\n]+\.[a-zA-Z]{2,}" />
    </div>
  </div>

  <div class="input-group">
    <div>
      <label for="phone">Phone:</label>
      <input type="tel" id="phone" name="phone" required pattern="^(\+972|0)([23489]|5[02468])\d{7}$" />
    </div>

    <div>
      <label for="subject">Subject:</label>
      <input type="text" id="subject" name="subject" required />
    </div>
  </div>

  <div class="input-group message">
    <div>
      <label for="message">Message:</label>
      <textarea id="message" name="message" required></textarea>
      <div id="cf-turnstile"></div>
    </div>
  </div>
  <div class="input-group submit">
    <div><input type="submit" id="submitButton" value="Submit" /></div>
  </div>
</form>
<script src="{{ url_for('static', filename='/form/form.js') }}"></script>